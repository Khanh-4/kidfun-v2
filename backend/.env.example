cat > .env.example << 'EOF'
# Environment
NODE_ENV=development

# Backend Server
PORT=3001
API_URL=http://localhost:3001

# Database (SQLite for development)
DATABASE_URL="file:./dev.db"

# JWT Authentication
JWT_SECRET=your-super-secret-jwt-key-change-this-in-production
JWT_EXPIRES_IN=24h
JWT_REFRESH_EXPIRES_IN=7d

# Frontend URLs
PARENT_DASHBOARD_URL=http://localhost:3000
CHILD_MONITOR_URL=http://localhost:3002

# Socket.IO
SOCKET_CORS_ORIGIN=http://localhost:3000,http://localhost:3002
EOF
